<p id="notice"><%= notice %></p>

<h1>All Students</h1>

<table class="table">
  <thead>
    <tr>
      <th>Roll no</th>
      <th>Name en</th>
      <th>Name my</th>
      <th>Exam status</th>
      <th>Distinctions</th>
      <th>Major</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.roll_no %></td>
        <td><%= student.name_en %></td>
        <td><%= student.name_my %></td>
        <td><%= student.exam_status %></td>
        <td><%= student.distinctions %></td>
        <td><%= student.major %></td>
        <td><%= student.year %></td>
        <% if current_user then %>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <% end %>
        <% if current_user && current_user.super_admin? %>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @students %>

<% unless current_user && current_user.moderator? %>
  <%= link_to 'New Student', new_student_path, class: 'btn btn-primary btn-rounded' %>
<% end %>