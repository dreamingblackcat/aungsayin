<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :roll_no %>
    <%= f.input :name_en %>
    <%= f.input :name_my %>
    <%= f.input :exam_status, label: "Check if student has passed the exam" %>
    <%= f.input :distinctions %>
    <%= f.input :major %>
    <%= f.input :year %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
