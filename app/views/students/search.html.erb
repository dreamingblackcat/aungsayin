<p id="notice"><%= notice %></p>

<h1>Search Results</h1>
<%= link_to "Back", root_url, class: 'btn btn-success' %>
<% unless @students.empty? then %>
  <table class="table">
    <thead>
      <tr>
        <th>Roll no</th>
        <th>Name en</th>
        <th>Name my</th>
        <th>Exam status</th>
        <th>Distinctions</th>
        <th>Major</th>
        <th>Year</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.roll_no %></td>
            <td><%= student.name_en %></td>
            <td><%= student.name_my %></td>
            <td><%= student.exam_status %></td>
            <td><%= student.distinctions %></td>
            <td><%= student.major %></td>
            <td><%= student.year %></td>
        <% end %>
    
    </tbody>
  </table>
<% else %>
  <p>
    Sorry, No Result For Your Query.
  </p>
<% end %>

<br>
<%= paginate @students %>
